@model MVC4StudentsApplication.CourseTable

@{
    ViewBag.Title = "Create Course";
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
            </hgroup>            
        </div>
    </section>
}


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>CourseTable</legend>            

        <div class="editor-label">
            @Html.LabelFor(model => model.CourseTitle)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CourseTitle)
            @Html.ValidationMessageFor(model => model.CourseTitle)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CourseRoom)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CourseRoom)
            @Html.ValidationMessageFor(model => model.CourseRoom)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CourseDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CourseDate)
            @Html.ValidationMessageFor(model => model.CourseDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CourseDuration)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CourseDuration)
            @Html.ValidationMessageFor(model => model.CourseDuration)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
