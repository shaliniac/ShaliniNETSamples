@model MVC4StudentsApplication.StudentTable

@{
    ViewBag.Title = "Create Student";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
            </hgroup>            
        </div>
    </section>
}


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>StudentTable</legend>    
      

        <div class="editor-label">
            @Html.LabelFor(model => model.StudentName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StudentName)
            @Html.ValidationMessageFor(model => model.StudentName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StudentAddress)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StudentAddress)
            @Html.ValidationMessageFor(model => model.StudentAddress)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StudentPhone)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StudentPhone)
            @Html.ValidationMessageFor(model => model.StudentPhone)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StudentEmail)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StudentEmail)
            @Html.ValidationMessageFor(model => model.StudentEmail)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
